%h1 本の検索

.search-form
  = form_for @search_form, url: books_search_path, html: {method: :get} do |f|
    = f.search_field :keyword, placeholder: 'アイテムを検索'
    = f.submit '検索', class: 'button'

%br

%table
  %thead
    %tr
      %th 画像
      %th タイトル
      %th 著者
      %th ASIN
      %th 出版社
      %th 出版日
      %th 価格

  %tbody
    - @books.each do |book|
      %tr
        %td= link_to image_tag(book.image), book.url
        %td= link_to book.title, book.url
        %td= book.author
        %td= book.asin
        %td= book.publisher
        %td= book.published_at
        %td= book.price

= paginate @books, :window => 10
