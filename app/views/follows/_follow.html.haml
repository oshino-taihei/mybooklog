- unless user == current_user
  - if current_user.following?(user)
    = form_for(current_user.from_follows.find_by(to_user_id: user.id), method: :delete) do |f|
      .field
        = hidden_field_tag :id, user.id
      .actions.unfollow
        = f.submit "フォロー解除"
  - else
    = form_for(current_user.from_follows.build) do |f|
      .field
        = hidden_field_tag :id, user.id
      .actions.follow
        = f.submit "フォローする"
